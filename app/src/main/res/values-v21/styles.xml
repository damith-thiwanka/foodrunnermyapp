<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/food_runner_background</item>
    </style>


    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="android:progressDrawable">@drawable/rate_bar_custom</item>
        <item name="colorControlActivated">#ef4040</item>
        <item name="colorControlNormal">#cc939393</item>
        <item name="android:minHeight">23dip</item>
        <item name="android:maxHeight">150dip</item>
    </style>

</resources>
